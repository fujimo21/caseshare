<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    
    <br>
    
    <%= link_to "Facebookでログイン", user_omniauth_authorize_path(:facebook), class: "btn btn-facebook" %>
    
    <hr>
    
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'shared/devisemes' %>
      
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "メールアドレス" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "パスワード" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %> ログイン情報を記憶する
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", :class => "btn btn-primary" %>
        <%= link_to "パスワードを忘れたら", new_user_password_path, :class => "btn btn-link" %>
      </div>
    <% end %>
  </div>
</div>