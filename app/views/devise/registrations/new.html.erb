<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    
    <br>
    
    <%= link_to "Facebookで登録", user_omniauth_authorize_path(:facebook), class: "btn btn-facebook" %>
    
    <hr>
    
    <h2>メールアドレスで登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devisemes' %>

      <div class="form-group">        
        <%= f.text_field :fullname, :class => 'form-control', :placeholder => 'お名前', autofocus: true %>
      </div>

      <div class="form-group">        
        <%= f.email_field :email, :class => 'form-control', :placeholder => 'メールアドレス' %>
      </div>

      <div class="form-group">        
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, :class => 'form-control', :placeholder => 'パスワード',  autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "アカウント登録", :class => "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>