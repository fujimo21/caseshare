<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "プロフィール編集", edit_user_registration_path, class: "sidebar-link active" %></li>
    </ul>
    <br>
    <%= link_to "自分のプロフィールを見る", user_path(current_user.id), class: "btn btn-default wide" %>
  </div>

  <div class="col-md-9 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">あなたのプロフィール</div>  
      <div class="panel-body">
        <div class="container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render 'shared/devisemes' %>

            <div class="form-group">
              <%= f.text_field :fullname, autofocus: true, :placeholder => "お名前", :class => 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, :placeholder => "メールアドレス", :class => 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.text_field :phone_number, :placeholder => "電話番号（入力すると”信頼証明”としてプロフィール画面に表示されます）", :class => 'form-control' %>
            </div>
            
            <div class="form-group">
						  <%= f.text_field :address, placeholder: "住所（送付先・返却先情報として使います）", :class => "form-control" %>
					  </div>

            <div class="form-group">
              <%= f.text_area :description, rows: 5, cols: 25,  :placeholder => "自己紹介", :class => 'form-control' %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", :placeholder => "新しいパスワード (ブランクでも構いません)", :class => 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "パスワード確認", :class => 'form-control' %>
            </div>
            
            <div class="actions">
              <%= f.submit "保存", :class => "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div> 