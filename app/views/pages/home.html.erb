<%= form_tag search_path, method: :get do %>
	<div class="row">
		<div class="col-md-2">
			<%= check_box_tag "q[case_type_eq_any][]", "ソフトタイプ" %> ソフトタイプ
		</div>
		<div class="col-md-2">
			<%= check_box_tag "q[case_type_eq_any][]", "ハードタイプ" %> ハードタイプ
		</div>
		<div class="col-md-2">
			<%= check_box_tag "q[case_type_eq_any][]", "レザータイプ" %> レザータイプ
		</div>
		<div class="col-md-2">
			<%= text_field_tag :start_date, params[:start_date], placeholder: "開始日", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= text_field_tag :end_date, params[:end_date], placeholder: "返却日", class: "form-control" %>
		</div>
		<div class="col-md-2">
			<%= submit_tag "検索する", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>

<div class="row">
	<% @suitcases.each do |suitcase| %>
		
		<div class="col-md-4">
			<div class="panel panel-default">
				<div class="panel-heading preview">
					<%= image_tag suitcase.photos[0].image.url(:medium) if suitcase.photos.length > 0 %>
				</div>
				<div class="panel-body">
					<!--%= link_to image_tag(avatar_url(room.user), user_path(suitcase.user), class: "img-circle avatar-small" %>&nbsp;-->
					<%= link_to suitcase.listing_name, suitcase %>
				</div>
			</div>
		</div>

	<% end %>
</div>

<script>
	$(function() {
		$("#start_date").datepicker({
			dateFormat: 'yy-mm-dd(D)',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#end_date').datepicker("option", "minDate", selected);
				$('#end_date').attr('disabled', false);
			}
		});

		$("#end_date").datepicker({
			dateFormat: 'yy-mm-dd(D)',
			minDate: 0,
			maxDate: '3m',
			onSelect: function(selected) {
				$('#start_date').datepicker("option", "maxDate", selected);
			}
		});
	})


</script>