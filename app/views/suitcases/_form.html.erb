<div class="panel panel-default">
	<div class="panel-heading">
		Create your beautiful place
	</div>
	<div class="panel-body">
		<div class="container">
			
			<%= form_for @suitcase, :html => { multipart: true } do |f| %>

				<div class="row">
					<div class="col-md-4 select">
						<div class="form-group">
							<label>Suitcase Type</label>
							<%= f.select :case_type, [["ソフトタイプ","ソフトタイプ"], ["ハードタイプ","ハードタイプ"], ["レザータイプ","レザータイプ"]], id: "case_type", prompt: "選択する", class: "form-control" %>
						</div>
					</div>

					<div class="col-md-4 select">
						<div class="form-group">
							<label>Suitcase Size</label>
							<%= f.select :case_size, [["～2日","～2日"], ["3，4日","3，4日"], ["5日～","5日～"]],prompt: "選択する", class: "form-control" %>
						</div>
					</div>

					<div class="col-md-4 text-center">
						<div class="form-group">
							<br>
							<label>
								<%= f.check_box :has_key %> Key
							</label>
						</div>
					</div>
				</div>
				
				<div class="row">
					<div class="col-md-12">
						<div class="form-group">
							<label>名前</label>
							<%= f.text_field :listing_name, placeholder: "例：ジョセフ", class: "form-control" %>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-12">
						<div class="form-group">
							<label>説明</label>
							<%= f.text_area :summary, rows: 5, placeholder: "例：12ヵ国制覇した相棒です。鍵は壊れました。", class: "form-control" %>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<label>1日の料金</label>
							<div class="input-group">
								<div class="input-group-addon"><i class="fa fa-yen"></i></div>
									<%= f.text_field :price, placeholder: "例：500", class: "form-control" %>
							</div>	
						</div>
					</div>
				</div>
				
				<div class="row">
					<div class="col-md-4">
						<div class="form-group">							
							<span class="btn btn-default btn-file">
							    <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos 
							    <%= file_field_tag "images[]", type: :file, multiple: true %>
							</span>
						</div>		
					</div>
				</div>
				
				<div id="photos"><%= render 'photos/list' %></div>

				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<%= f.check_box :active %> Active
						</div>
					</div>
				</div>

				<div class="actions">
					<%= f.submit "Save", class: "btn btn-primary" %>
				</div>

			<% end %>

		</div>
	</div>
</div>