<%= form_for([@suitcase, @suitcase.reservations.new]) do |f| %>

  <div class="row">
		<div class="col-md-12 price_tag">
			<span><i class="fa fa-yen"></i><%= @suitcase.price %></span>
			<span class="pull-right">/ 1日</span>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<label>借りる日</label>
			<%= f.text_field :start_date, readonly: 'true', placeholder: 'Start Days', class: 'form-control' %>		
		</div>
		<div class="col-md-6">
			<label>返す日</label>
			<%= f.text_field :end_date, readonly: 'true', placeholder: 'End Date', class: 'form-control', disabled: 'true' %>		
		</div>
	</div>
	
	<%= f.hidden_field :suitcase_id, value: @suitcase.id %>
	<%= f.hidden_field :price, value: @suitcase.price %>
	<%= f.hidden_field :total, id: 'reservation_total' %>
	
	<h4><span id="message"></span></h4>
	
	<div id="preview" style="display: none">

		<table class="reservation-table" >
			<tbody>
				<tr>
					<td>期間（日）</td>
					<td><span id="reservation_days"></span></td>
				</tr>
				<tr>
					<td>合計料金（円）</td>
					<td><span id="reservation_sum"></span></td>
				</tr>
			</tbody>
		</table>
		<br>
	</div>
	
	<%= f.submit "この日程で借りる", id: "btn_book", class: "btn btn-primary wide", disable: 'true' %>
<% end %>

<script>

  function unavailable(date) {
		dmy = date.getDate() + "-" + (date.getMonth()+1) + "-" + date.getFullYear();
		return [$.inArray(dmy, unavailableDates) == -1];
	}
  
	$(function() {
	  
	  unavailableDates = [];
	  
	  $.datepicker.setDefaults( $.datepicker.regional[ "ja" ] );
	  
	  $.ajax({
			url: '/preload',
			data: {'suitcase_id': <%= @suitcase.id %>},
			dataType: 'json',
			success: function(data) {

				$.each(data, function(arrID, arrValue) {
					for(var d = new Date(arrValue.start_date); d <= new Date(arrValue.end_date); d.setDate(d.getDate() + 1)) {
						unavailableDates.push($.datepicker.formatDate('d-m-yy', d));
					}
				});
    
    
    		$('#reservation_start_date').datepicker({
    		  dateFormat: 'yy-mm-dd(D)',
    		  minDate: 0,
					maxDate: '3m',
					beforeShowDay: unavailable,
					onSelect: function(selected) {
						$('#reservation_end_date').datepicker("option", "minDate", selected);
						$('#reservation_end_date').attr('disabled', false);
						
						var start_date = $(this).datepicker('getDate');
						var end_date = $('#reservation_end_date').datepicker('getDate');
						var days = (end_date - start_date)/1000/60/60/24 + 1

						var input = {
							'start_date': start_date,
							'end_date': end_date,
							'suitcase_id': <%= @suitcase.id %>
						}
						
						$.ajax({
							url: "/preview",
							data: input,
							success: function(data) {

								if (data.conflict) {

									$('#message').text("先約があります。");
									$('#preview').hide();
									$('#btn_book').attr('disabled', true);

								} else {
								  $('#message').text("");

									$('#preview').show();
									$('#btn_book').attr('disabled', false);

									var total = days * <%= @suitcase.price %>
									$('#reservation_days').text(days);
									$('#reservation_sum').text(total);
									$('#reservation_total').val(total);
								}
							}
						});
					}
    		});
    		
    		$('#reservation_end_date').datepicker({
    		  dateFormat: 'yy-mm-dd(D)',
    		  minDate: 0,
					maxDate: '3m',
					beforeShowDay: unavailable,
					onSelect: function(selected) {
						$('#reservation_start_date').datepicker("option", "maxDate", selected);
						
						var start_date = $('#reservation_start_date').datepicker('getDate');
						var end_date = $(this).datepicker('getDate');
						var days = (end_date - start_date)/1000/60/60/24 + 1

						var input = {
							'start_date': start_date,
							'end_date': end_date,
							'suitcase_id': <%= @suitcase.id %>
						}

						$.ajax({
							url: "/preview",
							data: input,
							success: function(data) {

								if (data.conflict) {

									$('#message').text("先約があります。");
									$('#preview').hide();
									$('#btn_book').attr('disabled', true);

								} else {
								  $('#message').text("");

									$('#preview').show();
									$('#btn_book').attr('disabled', false);

									var total = days * <%= @suitcase.price %>
									$('#reservation_days').text(days);
									$('#reservation_sum').text(total);
									$('#reservation_total').val(total);
								}
							}
						});
					}
    		});
		}
	});
	
});
</script>